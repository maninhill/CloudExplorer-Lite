<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fit2cloud.base.mapper.BaseAccountJobMapper">
    <resultMap id="AccountJobRecordMap" type="com.fit2cloud.response.cloud_account.AccountJobRecordResponse">
        <result column="account_id" jdbcType="VARCHAR" property="accountId"/>
        <result column="job_record_id" jdbcType="VARCHAR" property="jobRecordId"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="params" jdbcType="VARCHAR" property="params"
                typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
        <result column="create_time" jdbcType="DATE" property="createTime"/>
    </resultMap>

    <select id="findLastAccountJobRecord"
            resultMap="AccountJobRecordMap">
        SELECT
        a.account_id,a.create_time, a.job_record_id,j.type,j.`status`,j.description,j.params
        FROM
        account_job a
        LEFT JOIN job_record j ON a.job_record_id = j.id
        RIGHT JOIN (
        SELECT
        MAX( aj.create_time ) AS create_time,
        account_id ,
        description
        FROM
        account_job aj
        LEFT JOIN job_record jr ON aj.job_record_id = jr.id
        WHERE
        aj.account_id IN
        <foreach collection="cloudAccountIds" index="index" item="id" separator="," close=")" open="(">
            #{id}
        </foreach>
        GROUP BY
        aj.account_id,
        jr.description
        ) t1 ON t1.account_id = a.account_id
        AND t1.create_time = a.create_time and t1.description=j.description AND t1.account_id=a.account_id
        ORDER BY j.description
    </select>
</mapper>
